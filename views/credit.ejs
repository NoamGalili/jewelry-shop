<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <title>NTLC Jewelry</title>
    <link href="/styles/all.css" rel="stylesheet">
</head>
<body>
    <header>
        <h1>NTLC</h1>
        <div class="icon-container">
            <div id="cart-button">
                <img class="head-icons" src="/images/cart-icon.png" alt="Cart Icon">
                <span id="cart-count" class="cart-count">0</span>
            </div>
            <img class="head-icons" src="/images/search-icon.png" alt="Search Icon" id="searchIcon">
            <a href="login.ejs"><img class="head-icons" src="/images/user-icon.png" alt="User Icon" id="userIcon"></a>
            <div>
                <a href="myprofile.ejs" class="profile-link">my profile</a>
            </div>
        </div>
        <div class="search-bar" id="searchBar">
            <button id="searchButton">Search</button>
            <input type="text" id="searchInput" placeholder="Search...">
        </div>
    </header>

    <nav>
        <ul>
            <li><a href="#home" id="home-link">Home</a></li>
            <li><a href="#about">About Us</a></li>
            <li class="dropdown">
                <a href="#shop" id="shop">Shop</a>
                <div id="options" class="dropdown-content hidden">
                    <p><a href="jewelry.ejs" id="showNecklaces">Necklaces</a></p>
                    <p><a href="jewelry.ejs" id="showRings">Rings</a></p>
                    <p><a href="jewelry.ejs" id="showBracelets">Bracelets</a></p>
                    <p><a href="jewelry.ejs" id="showEarrings">Earrings</a></p>
                </div>
            </li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </nav>


    <main>
        <!-- Payment Section -->
        <section id="payment" class="payment-section">
            <div class="payment-container">
                <div class="left-column">
                    <h2>Payment</h2>
                    <form action="/payment" method="post">
                        <div class="form-group">
                            <label for="cardNumber">Credit Card Number</label>
                            <input type="text" id="cardNumber" name="cardNumber" placeholder="Credit Card Number" required>
                        </div>
                        <div class="form-group">
                            <label for="expiryDate">Expiry Date</label>
                            <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY" required>
                        </div>
                        <div class="form-group">
                            <label for="cvv">CVV</label>
                            <input type="text" id="cvv" name="cvv" placeholder="CVV" required>
                        </div>
                        <button type="submit">Submit Payment</button>
                    </form>
                </div>
                <div class="right-column">
                    <div class="order-summary">
                        <h2>Order Summary</h2>
                        <p>Subtotal: $0</p>
                        <p>Express Delivery with Signature: $0</p>
                        <p>Estimated Total: $0</p>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 NTLC Jewelry. All rights reserved.</p>
    </footer>

    <div id="cart" class="cart">
        <h2>Shopping Cart</h2>
        <ul id="cart-items"></ul>
        <p>Total: â‚ª<span id="cart-total">0</span></p>
        <a href="payment.ejs"><button id="checkout">Checkout</button></a>
    </div>
    
    <script src="/javascript/credit.js"></script>
</body>
</html>
